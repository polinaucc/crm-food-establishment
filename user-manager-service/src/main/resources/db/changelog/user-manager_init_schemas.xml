<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="0" author="ygoway">
        <tagDatabase tag="clean_db"/>
    </changeSet>

    <changeSet id="1" author="ygoway">
        <comment>Init user table</comment>
        <createTable tableName="user">
            <column name="id" type="int" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true"/>
            </column>
            <column name="password" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(64)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="uuid" type="binary(16)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="ygoway">
        <comment>Init user_permission table</comment>
        <createTable tableName="user_permission">
            <column name="user_id" type="int">
                <constraints foreignKeyName="fk_user_id" references="user(id)" nullable="false"/>
            </column>
            <column name="permission" type="varchar(8)" defaultValue="consumer">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="ygoway">
        <comment>Creating composite pk based on fk user_id and permission columns</comment>
        <addPrimaryKey tableName="user_permission" columnNames="user_id,permission"/>
    </changeSet>

    <changeSet id="4" author="ygoway">
        <comment>Init personal_info table</comment>
        <createTable tableName="personal_info">
            <column name="id" type="int" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="int">
                <constraints foreignKeyName="fk_user_id" references="user(id)" unique="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(32)">
                <constraints nullable="false" />
            </column>
            <column name="last_name" type="varchar(32)">
                <constraints nullable="false" />
            </column>
            <column name="is_male" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="birthday" type="date"/>
            <column name="address" type="varchar(1024)"/>
        </createTable>
    </changeSet>

    <changeSet id="10" author="ygoway">
        <tagDatabase tag="db_init"/>
    </changeSet>

</databaseChangeLog>