<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2843" author="ygoway">
        <createTable tableName="personal_info">
            <column name="id" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="int">
                <constraints foreignKeyName="id" references="user(id)" unique="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(32)">
                <constraints nullable="false" />
            </column>
            <column name="last_name" type="varchar(32)">
                <constraints nullable="false" />
            </column>
            <column name="sex" type="varchar(6)"/>
            <column name="birthday" type="date"/>
            <column name="address" type="varchar(1024)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>